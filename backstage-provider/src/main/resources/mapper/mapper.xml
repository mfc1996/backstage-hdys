<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jk.mapper.UserMapper">
    <select id="queryCount" resultType="int">

        select count(*) from h_user
    </select>

    <select id="queryList"  resultType="com.jk.model.User">
 select * from h_user
        limit #{start},#{rows}
</select>
    <select id="queryProCount" resultType="int">
        select count(1) from h_product
    </select>

    <select id="queryProList"  resultType="com.jk.model.ProBean">
 select * from h_product
        limit #{start},#{rows}
</select>

    <delete id="deleteProById" parameterType="int">
        delete from h_product where productId in
        <foreach collection="array" index="index" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </delete>

    <insert id="savePro" parameterType="com.jk.model.ProBean" >
        insert into h_product (productName,productPrice,productStockId,productDeliveryTime,paymentId,proDealCount,productState) values(#{productName},#{productPrice},#{productStockId},#{productDeliveryTime},#{paymentId},#{proDealCount},#{productState})
   </insert>


    <update id="updState" >
        update h_product  set productState=#{productState} where productId in
        <foreach collection="ids" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
    </update>

<select id="findProById" resultType="com.jk.model.ProBean"  parameterType="int">
    select * from h_product where productId = #{value}
</select>

    <update id="updatePro" parameterType="com.jk.model.ProBean">
        update h_product set productName=#{productName},productPrice=#{productPrice},productStockId=#{productStockId},productDeliveryTime=#{productDeliveryTime},paymentId=#{paymentId},proDealCount=#{proDealCount},productState=#{productState} where productId=#{productId}
    </update>

</mapper>